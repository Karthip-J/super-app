{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/favicon.ico",
      "dest": "/favicon.ico"
    },
    {
      "src": "/manifest.json",
      "dest": "/manifest.json"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "REACT_APP_API_URL": "https://super-app-0ofo.onrender.com"
  },
  "build": {
    "env": {
      "REACT_APP_API_URL": "https://super-app-0ofo.onrender.com",
      "DISABLE_ESLINT_PLUGIN": "true",
      "CI": "false",
      "SKIP_PREFLIGHT_CHECK": "true"
    }
  }
} 